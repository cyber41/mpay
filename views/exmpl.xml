<odoo>
<data>

  <template id="posted_page" name="Demo Page" page="True">
    <t t-call="website.layout">
      <div class="oe_structure">
        <div class="container" >
          <center><h3>Logged in</h3></center>
          <t t-foreach='data' t-as='record'>
            <t t-esc='record.sender_name'/>
            <t t-esc='record.sender_phone'/>
            <t t-esc='record.received_amount'/>
            <br/>
          </t>
          <t t-if='conf'> <p>This is the posted page</p> </t>

        </div>
      </div>
    </t>
  </template>

  <template id="example__page" name="Demo Page" page="True">
    <t t-call="website.layout">
      <div class="oe_structure">
        <div class="container" >
          <center><h3>Login</h3></center>

      <form class="form" action="method" method="post">
            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
            <input type="text" name="username" />
            <br/> <br/>
            <input type="password" name="password" />
            <br/> <br/>
            <input type="textarea" name="message" />
            <br/> <br/>
            <button type="submit" >Login</button>

      </form>
          <p>
            You can add all your content here.<br/>
            <a href='/here'>Hello</a>
            <a t-attf-href="/example/detail" class="btn btn-info"> Company detail page </a>
          </p>
        </div>
      </div>
    </t>
  </template>
</data>
</odoo>
